@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<h1>Login</h1>
<form method="post" class="mt-5">
    
    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
    <div class="form-group mb-3">
        <label for="" asp-for="Username" class="form-label">Name</label>
        <input type="text"  asp-for="Username" class="form-control" placeholder="isminiz" />
        <span asp-validation-for="Username" class="text-danger small"></span>
    </div>
    <div class="form-group mb-3">
        <label for=""  asp-for="Email" class="form-label">Email Address</label>
        <input type="email"  asp-for="Email" class="form-control" placeholder="e-mail" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>
    <div class="form-group mb-3">
        <label for="" asp-for="Password" class="form-label">Password</label>
        <input type="text" asp-for="Password" type="password" class="form-control" placeholder="sifreniz" />
        <span asp-validation-for="Password" class="text-danger small"></span>
        
    </div>
   
    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</button>
</form>